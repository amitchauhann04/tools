    <script>
        // Set current year in footer
        document.getElementById('year').textContent = new Date().getFullYear();
        
        // DOM elements
        const uploadArea = document.getElementById('upload-area');
        const fileInput = document.getElementById('file-input');
        const qualitySlider = document.getElementById('quality');
        const qualityValue = document.getElementById('quality-value');
        const resizeSlider = document.getElementById('resize');
        const resizeValue = document.getElementById('resize-value');
        const compressBtn = document.getElementById('compress-btn');
        const resetBtn = document.getElementById('reset-btn');
        const resultsSection = document.getElementById('results');
        const originalPreview = document.getElementById('original-preview');
        const compressedPreview = document.getElementById('compressed-preview');
        const originalSize = document.getElementById('original-size');
        const compressedSize = document.getElementById('compressed-size');
        const savings = document.getElementById('savings');
        const qualityResult = document.getElementById('quality-result');
        const downloadBtn = document.getElementById('download-btn');
        const spinner = document.getElementById('spinner');
        
        // File handling
        let selectedFile = null;
        let compressedImageBlob = null;
        
        // Event listeners
        uploadArea.addEventListener('click', () => fileInput.click());
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('active');
        });
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('active');
        });
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('active');
            
            if (e.dataTransfer.files.length) {
                handleFileSelect(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                handleFileSelect(fileInput.files[0]);
            }
        });
        
        qualitySlider.addEventListener('input', () => {
            qualityValue.textContent = qualitySlider.value;
        });
        
        resizeSlider.addEventListener('input', () => {
            resizeValue.textContent = resizeSlider.value;
        });
        
        compressBtn.addEventListener('click', compressImage);
        resetBtn.addEventListener('click', resetTool);
        
        // Functions
        function handleFileSelect(file) {
            // Check file type
            const validTypes = ['image/jpeg', 'image/png', 'image/webp'];
            if (!validTypes.includes(file.type)) {
                alert('Please select a valid image file (JPG, PNG, or WebP)');
                return;
            }
            
            // Check file size (15MB limit)
            if (file.size > 15 * 1024 * 1024) {
                alert('File size exceeds 15MB limit');
                return;
            }
            
            selectedFile = file;
            
            // Display file info
            uploadArea.innerHTML = `
                <i class="fas fa-check-circle"></i>
                <h3>${file.name}</h3>
                <p class="file-info">${formatFileSize(file.size)} • ${file.type.replace('image/', '').toUpperCase()}</p>
            `;
            
            // Preview original image
            const reader = new FileReader();
            reader.onload = (e) => {
                originalPreview.src = e.target.result;
            };
            reader.readAsDataURL(file);
            
            // Show original size
            originalSize.textContent = formatFileSize(file.size);
            
            // Reset results
            resultsSection.style.display = 'none';
        }
        
        function compressImage() {
            if (!selectedFile) {
                alert('Please select an image first');
                return;
            }
            
            // Show loading spinner
            spinner.style.display = 'block';
            compressBtn.disabled = true;
            compressBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Compressing...';
            
            // Simulate processing delay (in a real app, this would be actual compression)
            setTimeout(() => {
                const quality = parseInt(qualitySlider.value) / 100;
                const resizeFactor = parseInt(resizeSlider.value) / 100;
                
                // In a real implementation, you would use the Canvas API or a library like compressorjs
                // to actually compress the image. This is just a simulation.
                
                // Create a fake compressed version (in a real app, this would be actual compression)
                const reader = new FileReader();
                reader.onload = (e) => {
                    // Calculate fake compressed size based on quality
                    const originalSizeBytes = selectedFile.size;
                    const compressedSizeBytes = Math.max(originalSizeBytes * quality * 0.7, 1000); // Minimum 1KB
                    
                    // Create a fake blob (in a real app, this would be the actual compressed image)
                    compressedImageBlob = new Blob([selectedFile], { type: selectedFile.type });
                    
                    // Update UI with results
                    compressedPreview.src = e.target.result;
                    compressedSize.textContent = formatFileSize(compressedSizeBytes);
                    qualityResult.textContent = qualitySlider.value + '%';
                    
                    const savingsPercent = ((originalSizeBytes - compressedSizeBytes) / originalSizeBytes * 100).toFixed(1);
                    savings.textContent = `${savingsPercent}%`;
                    
                    // Set up download link
                    const downloadUrl = URL.createObjectURL(compressedImageBlob);
                    downloadBtn.href = downloadUrl;
                    downloadBtn.download = `compressed_${selectedFile.name}`;
                    
                    // Show results
                    resultsSection.style.display = 'block';
                    spinner.style.display = 'none';
                    compressBtn.disabled = false;
                    compressBtn.innerHTML = '<i class="fas fa-compress-alt"></i> Compress Image';
                    
                    // Scroll to results
                    resultsSection.scrollIntoView({ behavior: 'smooth' });
                    
                    // Revoke the object URL after download
                    downloadBtn.addEventListener('click', () => {
                        setTimeout(() => {
                            URL.revokeObjectURL(downloadUrl);
                        }, 100);
                    });
                };
                reader.readAsDataURL(selectedFile);
            }, 1500);
        }
        
        function resetTool() {
            // Reset file input
            fileInput.value = '';
            selectedFile = null;
            compressedImageBlob = null;
            
            // Reset
